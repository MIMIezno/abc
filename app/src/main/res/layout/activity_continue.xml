<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1"
    tools:context=".Continue">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginTop="88dp"
        android:text="Let's start with goals."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:text="Select goals."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <Button
        android:id="@+id/btnlose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_bg"
        android:text="Lose Weight"
        android:textAllCaps="false"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="179dp" />

    <Button
        android:id="@+id/btngain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gain Weight"
        android:textAllCaps="false"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="253dp" />

    <Button
        android:id="@+id/btnmuscle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gain Muscle"
        android:textAllCaps="false"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="323dp" />

    <Button
        android:id="@+id/btnmodify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modify My Diet"
        android:textAllCaps="false"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="389dp" />

    <Button
        android:id="@+id/btnmaintain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Maintain Weight"
        android:textAllCaps="false"
        tools:layout_editor_absoluteX="158dp"
        tools:layout_editor_absoluteY="462dp" />
</androidx.constraintlayout.widget.ConstraintLayout>