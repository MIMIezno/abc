<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".More">

    <LinearLayout
        android:layout_width="52dp"
        android:layout_height="55dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/circle_btn"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="26dp"
        tools:layout_editor_absoluteX="10dp"
        tools:ignore="MissingConstraints"
        android:clickable="true"
        android:focusable="true"
        android:onClick="openHomepage"
        android:contentDescription="return">

        <ImageView
            android:layout_width="34dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_prev" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="733dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="-2dp"
        tools:ignore="MissingConstraints">

    </LinearLayout>

    <TextView
        android:id="@+id/textView30"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-400dp"
        android:layout_marginTop="45dp"
        android:text="More"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="403dp"
        android:layout_height="557dp"
        android:orientation="vertical"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="-180dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="410dp"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:onClick="openAccount">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_weight="0"
                app:srcCompat="@drawable/person_profile_icon" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Account"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="410dp"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:onClick="openRecipes">

            <LinearLayout
                android:id="@+id/recipe"
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:orientation="horizontal"
                android:contentDescription="recipes">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/ic_meal" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_weight="1"
                    android:text="Recipes"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="410dp"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:onClick="openHistory">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/history" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_weight="1"
                    android:text="History"
                    android:textSize="20sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="410dp"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:onClick="openReminder">

            <LinearLayout
                android:layout_width="410dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/calendar" />

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="266dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_weight="0"
                    android:text="Reminders"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="528dp"
                    android:layout_height="747dp"
                    android:layout_gravity="left"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="60dp"
                    android:layout_weight="1"
                    android:alpha="0.4"
                    app:srcCompat="@drawable/logo" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="410dp"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:onClick="openWorkout">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/ic_dumb" />

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="265dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0"
                    android:text="Workouts"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="410dp"
            android:layout_height="70dp"
            android:orientation="vertical"
            android:clickable="true"
            android:focusable="true"
            android:onClick="openSettings">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/settings" />

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="271dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0"
                    android:text="Settings"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="150dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnsave"
                android:layout_width="350dp"
                android:layout_height="70dp"
                android:layout_marginTop="50dp"
                android:text="Log Out"
                android:layout_marginLeft="24dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="openLogin"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="470dp"
        android:layout_height="665dp"
        android:layout_gravity="left"
        android:orientation="vertical"
        android:layout_marginLeft="-340dp">

        <ImageView
            android:layout_width="528dp"
            android:layout_height="468dp"
            android:layout_gravity="left"
            android:layout_marginStart="30dp"
            android:layout_marginTop="60dp"
            android:layout_weight="1"
            android:alpha="0.3"
            app:srcCompat="@drawable/logo" />

    </LinearLayout>

</LinearLayout>