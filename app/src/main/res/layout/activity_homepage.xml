<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    android:orientation="vertical"
    tools:context=".Homepage">

    <LinearLayout
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="30dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="40dp"
        tools:ignore="MissingConstraints"
        android:clickable="true"
        android:focusable="true"
        android:onClick="openReminder"
        android:contentDescription="notif">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:gravity="center"
            app:srcCompat="@drawable/ic_notif" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="240dp"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="5dp"
        tools:ignore="MissingConstraints">



        <LinearLayout
            android:layout_width="210dp"
            android:layout_height="40dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/goal_icon" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="113dp"
                android:layout_height="40dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="Goals"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="145dp"
            android:layout_height="49dp"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:onClick="openWorkout">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_dumb" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="113dp"
                android:layout_height="40dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Workouts"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="145dp"
            android:layout_height="49dp"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:onClick="openRecipes">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_meal" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_width="113dp"
                android:layout_height="40dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meal Plan"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="195dp"
        android:layout_height="68dp"
        android:orientation="horizontal"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="-200dp"
        tools:layout_editor_absoluteX="201dp"
        tools:layout_editor_absoluteY="31dp"
        tools:ignore="MissingConstraints"
        android:clickable="true"
        android:focusable="true"
        android:onClick="openAccount">

        <RelativeLayout
            android:layout_width="113dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hello User!"
                android:textColor="@color/white"
                android:textSize="23sp" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/person_profile_icon"
            tools:ignore="DuplicateIds" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="412dp"
        android:layout_height="11dp"
        android:gravity="center"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="266dp"
        android:layout_marginTop="125dp"
        tools:ignore="MissingConstraints">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="352dp"
        android:layout_height="330dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="293dp"
        tools:ignore="MissingConstraints">

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="Current Calories : 1,900"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="269dp"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <FrameLayout
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="150dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp"
                        android:src="@drawable/circle_btn" /> <!-- Add padding to create a second circle effect -->
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/circle_border" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 glasses"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Remaining"
                            android:textColor="#FFFFFF"
                            android:textSize="8sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Goal: 8 glasses"
                            android:textColor="#FFFFFF"
                            android:textSize="8sp" />

                    </LinearLayout>
                </FrameLayout>

                <ImageView
                    android:id="@+id/textView16"
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:layout_marginLeft="93dp"
                    android:background="@drawable/circle_btn" />

                <FrameLayout
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:layout_marginLeft="93dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/circle_border" /> <!-- Add padding to create a second circle effect -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_marginTop="50dp"
                            android:text="\t\t\t\t\t\t\t\t 1, 200"
                            android:textColor="#FFFFFF"
                            android:textSize="30sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginStart="40dp"
                            android:layout_marginTop="2dp"
                            android:text="\t\t\t Remaining\n"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="61dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:text="\t\tGoal: 1,200\n Level: Beginner\n"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp" />
                    </LinearLayout>
                </FrameLayout>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="232dp"
            android:layout_height="189dp"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="179dp"
            tools:layout_editor_absoluteY="541dp"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="-60dp"
            tools:ignore="MissingConstraints">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/blurr"
                    android:layout_marginLeft="160dp"/>

                <View
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="158dp"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="openMore"
                    android:contentDescription="menu"/>

            </RelativeLayout>

            <ImageView
                    android:id="@+id/bulletImageView"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="160dp"
                    android:layout_marginTop="-35dp"
                    android:src="@drawable/list_round_bullet_outline_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="60dp">

                <RelativeLayout
                    android:layout_width="80dp"
                    android:layout_height="90dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/blurr"
                        android:contentDescription="imagebtn" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="openBlog"
                        android:contentDescription="selectblogbtn"/>

                </RelativeLayout>

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="-84dp"
                    android:layout_marginTop="29dp"
                    android:src="@drawable/edit_document_icon"
                    android:contentDescription="toblog" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="-15dp">

                <FrameLayout
                    android:layout_width="50dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/blurr"
                        android:layout_marginTop="-5dp"
                        android:layout_alignTop="@+id/bulletImageView" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="openReminder"
                        android:contentDescription="calendar"/>

                </FrameLayout>

                <ImageView
                    android:id="@+id/bulletImageView1"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="-50.2dp"
                    android:layout_marginTop="14dp"
                    android:src="@drawable/calendar_date_icon" />

            </LinearLayout>

        </LinearLayout>


</LinearLayout>



